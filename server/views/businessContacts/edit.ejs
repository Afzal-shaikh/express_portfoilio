<%- include ../partials/header.ejs %> 
<!-- Top navigation menu bar -->
<%- include ../partials/main_nav.ejs %> 

<!-- content for Edit page -->
<main class="container p-5 pt-6">
    <div class="row">
        <div class="offset-md-2 col-md-8">
        <div class="p-5 mb-3 home-wrapper">
        <h1 class="display-4 text-center fw-bold">Edit Contact<br> 
    </div>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField" class="mb-1">Name:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="nameTextField"
                    placeholder="Enter name"
                    name="name"
                    value=<%= contact.name %> 
                    required>
            </div>

            <div class="form-group">
                <label for="nameTextField" class="mb-1">Number:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="numberTextField"
                    placeholder="Enter number"
                    value=<%= contact.number %> 
                    name="number" 
                    
                    required>
            </div>

            <div class="form-group">
                <label for="nameTextField" class="mb-1">Email:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="emailTextField"
                    placeholder="Enter email"
                    name="email" 
                    value=<%= contact.email %> 
                    required>
            </div>

            <button class="btn btn-primary mt-3" type="submit">Submit</button>
            <a href="/contact-list" class="btn btn-secondary mt-3">Cancel</a>

        </form>
        </div>
</main>

<%- include ../partials/footer.ejs %> 